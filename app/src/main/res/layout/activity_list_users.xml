<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListUsersActivity"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
    <android.support.design.widget.BottomNavigationView
            android:id="@+id/nav_view_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/bottom_nav_menu_admin"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/add_email"
            android:background="@drawable/round_bg"
            android:gravity="center"
            android:hint="Enter E-mail"
            android:layout_marginTop="24dp" android:layout_marginBottom="10dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/add_user_password" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" android:layout_marginEnd="55dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="textVisiblePassword"
            android:ems="10"
            android:id="@+id/add_user_password"
            android:background="@drawable/round_bg"
            android:gravity="center"
            android:hint="Enter Password"
            app:layout_constraintTop_toBottomOf="@+id/add_email" android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/add_user_confirm_password"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" android:layout_marginEnd="55dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="textVisiblePassword"
            android:ems="10"
            android:id="@+id/add_user_confirm_password"
            android:background="@drawable/round_bg"
            android:gravity="center"
            android:hint="Confirm Password"
            app:layout_constraintTop_toBottomOf="@+id/add_user_password" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/checkBox"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" android:layout_marginEnd="55dp"/>
    <CheckBox
            android:text="Admin"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/checkBox"
            android:background="@drawable/round_bg"
            app:layout_constraintTop_toBottomOf="@+id/add_user_confirm_password"
            app:layout_constraintEnd_toStartOf="@+id/add_admin" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" android:layout_marginEnd="5dp"
    />
    <Button
            android:text="Add"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/add_admin"
            android:background="@drawable/round_bg"
            app:layout_constraintBaseline_toBaselineOf="@+id/checkBox"
            app:layout_constraintStart_toEndOf="@+id/checkBox" android:layout_marginEnd="55dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:text="Users"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent2"
            android:background="@color/colorAccent"
            android:textSize="32sp"
            android:textColorHighlight="@color/colorAccent2"
            android:gravity="center"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/checkBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <android.support.v7.widget.RecyclerView
            android:paddingTop="30dp"
            android:layout_width="414dp"
            android:layout_height="374dp"
            android:id="@+id/rv_users"
            android:layout_marginHorizontal="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:paddingBottom="30dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/nav_view_admin"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>

</android.support.constraint.ConstraintLayout>