<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateActivity"
        android:background="@color/colorPrimary">
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_iconmonstr_x_mark_1"
            android:id="@+id/cancel_button2"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/nav_view" app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/create"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="@string/create"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:layout_marginHorizontal="140dp"
                    android:gravity="center"
                    android:maxLines="1"
            />
            <Button
                    android:id="@+id/photo"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/ic_camera2"
                    android:background="@drawable/round_bg"
                    android:backgroundTint="@color/colorAccent2"
                    android:text="photo"
                    android:padding="5dp"
            />
            <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/text"
                    android:maxLength="32"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/round_bg"
                    android:hint="Name"
                    android:gravity="center"
            />
            <EditText
                    android:id="@+id/location"
                    android:maxLength="32"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/name"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/round_bg"
                    android:hint="Location"
                    android:gravity="center"
            />
            <EditText
                    android:id="@+id/street_name"
                    android:maxLength="32"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/location"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/round_bg"
                    android:hint="Street Name"
                    android:gravity="center"
            />
            <EditText
                    android:id="@+id/house_number"
                    android:maxLength="32"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/street_name"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/round_bg"
                    android:hint="House Number"
                    android:gravity="center"
                    android:inputType="number"
                    android:ems="10"
            />
            <EditText
                    android:id="@+id/postal_code"
                    android:maxLength="32"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/house_number"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/round_bg"
                    android:hint="Postal Code"
                    android:gravity="center"
                    android:inputType="textPostalAddress"
                    android:ems="10"
            />
            <EditText
                    android:id="@+id/town"
                    android:maxLength="32"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/postal_code"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/round_bg"
                    android:hint="Town"
                    android:gravity="center"
            />
            <EditText
                    android:id="@+id/country"
                    android:maxLength="32"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/town"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/round_bg"
                    android:hint="Country"
                    android:gravity="center"
            />
            <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:maxLength="238"
                    android:layout_below="@id/country"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:padding="5dp"
                    android:background="@drawable/round_bg"
                    android:hint="Description"
                    android:gravity="center"
            />
            <EditText
                    android:id="@+id/telephone"
                    android:maxLength="32"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/description"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/round_bg"
                    android:hint="Telephone"
                    android:gravity="center"
            />
            <EditText
                    android:id="@+id/email"
                    android:maxLength="36"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/telephone"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/round_bg"
                    android:hint="E-Mail"
                    android:gravity="center"
            />
            <com.google.android.gms.maps.MapView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/mapView"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
            />
            <Button
                    android:text="Add"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:id="@+id/confirm_order"
                    android:background="@drawable/round_bg"
                    android:backgroundTint="@color/colorAccent2"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_below="@id/mapView"
                    android:layout_marginBottom="70dp"
            />
        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu"/>

</android.support.constraint.ConstraintLayout>