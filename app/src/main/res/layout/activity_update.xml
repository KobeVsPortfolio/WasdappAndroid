<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UpdateActivity"
android:background="@color/colorPrimary">
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_iconmonstr_x_mark_1"
            android:id="@+id/cancel_button"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/nav_view"
            app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/update"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="@string/update"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:layout_marginHorizontal="140dp"
                    android:gravity="center"
            />
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="110dp"
                    android:layout_gravity="center"
                    android:gravity="center">
                <Button
                        android:id="@+id/photoUpdate"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_camera2"
                        android:padding="5dp"
                        android:layout_marginEnd="10dp"
                        android:maxLines="1"/>
                <Button
                        android:id="@+id/uploadUpdate"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:background="@drawable/ic_iconmonstr_upload_17"
                        android:padding="5dp"
                        android:maxLines="1"

                />
            </LinearLayout>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/photoUpdateImage"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>
            <EditText
                    android:id="@+id/name_update"
                    android:maxLength="32"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:inputType="textVisiblePassword"
                    android:layout_marginRight="26dp"
                    android:maxLines="1"
                    android:background="@drawable/round_bg"
                    android:hint="@string/name"
                    android:gravity="center"
            />
            <EditText
                    android:id="@+id/location_update"
                    android:maxLength="32"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:inputType="textVisiblePassword"
                    android:layout_marginLeft="26dp"
                    android:maxLines="1"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/round_bg"
                    android:hint="@string/location"
                    android:gravity="center"
            />
            <EditText
                    android:id="@+id/street_name_update"
                    android:inputType="textVisiblePassword"
                    android:maxLength="32"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:maxLines="1"
                    android:background="@drawable/round_bg"
                    android:hint="@string/street_name"
                    android:gravity="center"
            />
            <EditText
                    android:id="@+id/house_number_update"
                    android:maxLength="32"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:inputType="textVisiblePassword"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/round_bg"
                    android:hint="@string/house_number"
                    android:maxLines="1"
                    android:gravity="center"
                    android:ems="10"
            />
            <EditText
                    android:id="@+id/postal_code_update"
                    android:maxLength="32"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/round_bg"
                    android:hint="@string/postal_code"
                    android:maxLines="1"
                    android:gravity="center"
                    android:inputType="textPostalAddress"
                    android:ems="10"
            />
            <EditText
                    android:id="@+id/town_update"
                    android:maxLength="32"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/round_bg"
                    android:inputType="textVisiblePassword"
                    android:hint="@string/town"
                    android:maxLines="1"
                    android:gravity="center"
            />
            <EditText
                    android:id="@+id/country_update"
                    android:maxLength="32"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:inputType="textVisiblePassword"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/round_bg"
                    android:hint="@string/country"
                    android:maxLines="1"
                    android:gravity="center"
            />
            <EditText
                    android:id="@+id/description_update"
                    android:maxLength="238"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:inputType="textVisiblePassword"
                    android:background="@drawable/round_bg"
                    android:hint="@string/description"
                    android:maxLines="1"
                    android:gravity="center"
            />
            <EditText
                    android:id="@+id/telephone_update"
                    android:maxLength="32"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:inputType="textVisiblePassword"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/round_bg"
                    android:hint="@string/telephone"
                    android:maxLines="1"
                    android:gravity="center"
            />
            <EditText
                    android:id="@+id/email_update"
                    android:maxLength="36"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="26dp"
                    android:inputType="textEmailAddress"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/round_bg"
                    android:hint="@string/e_mail"
                    android:maxLines="1"
                    android:gravity="center"
            />
            <Button
                    android:text="@string/update"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:id="@+id/update_button"
                    android:background="@drawable/round_bg"
                    android:backgroundTint="@color/colorAccent2"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="70dp"
            />
        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu"/>
    <android.support.design.widget.BottomNavigationView
            android:id="@+id/nav_view_admin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu_admin"/>
</android.support.constraint.ConstraintLayout>